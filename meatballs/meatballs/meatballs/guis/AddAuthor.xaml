<Window x:Class="meatballs.AddAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:meatballs"
        mc:Ignorable="d"
        Title="Add an Author" Height="221.935" Width="423.569">
    <Grid>
        <Label Content="Author Name:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="387" Margin="10,31,0,0"/>
        <Label Content="Notes:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,61,0,0"/>
        <TextBox x:Name="txtNotes" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="387" Margin="10,92,0,0"/>
        <Button x:Name="btnAdd" Content="Add to Databse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="153" Margin="10,142,0,0" Click="BtnAdd_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="153" Margin="244,142,0,0" Click="BtnCancel_Click"/>

    </Grid>
</Window>
