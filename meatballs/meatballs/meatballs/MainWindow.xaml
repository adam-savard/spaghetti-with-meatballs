<Window x:Class="meatballs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:meatballs"
        mc:Ignorable="d"
        Title="Meatballs De-Spaghettifier" Height="192.857" Width="244.97" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,2,-2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="307*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="txtTest" Content="Test" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>
        <Button x:Name="btnCreateProject" Content="New Project" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="10,51,0,0" Click="BtnCreateProject_Click"/>
        <Button x:Name="btnNewAuthor" Content="New Author" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="10,26,0,0" Click="BtnNewAuthor_Click"/>
        <Button x:Name="btnNewFile" Content="New File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="10,76,0,0"/>
        <Button x:Name="btnFunctionEntry" Content="Function Entry" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="10,101,0,0"/>
        <DockPanel Margin="0,0,0,393" >
            <ToolBarTray DockPanel.Dock="Top" Margin="0,0,-164,0">
                <ToolBar>
                    <Button x:Name="btnHelp" Command="Help" Content="Help" VerticalAlignment="Bottom" Click="BtnHelp_Click" />

                </ToolBar>

            </ToolBarTray>
        </DockPanel>

    </Grid>
</Window>
